<h1>List A Pet For Adoption</h1>

<%= form_for(@pet) do |f| %>
    <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>
    <div>
    <%= f.label :age %>
    <%= f.text_field :age %>
    </div>
    <div>
    <%= f.label :gender %>
    <%= f.text_field :gender %>
    </div>
    <div>
    <%= f.label :breed %>
    <%= f.text_field :breed %>
    </div>
    <div>
    <%= f.label :url %>
    <%= f.text_area :url%>
    </div>
    <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
    </div>
    <div>
    <%= f.submit "List Pet" %>
    </div>
<%end%>
